{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://cdn.jsdelivr.net/npm/vega-datasets@v1.29.0/data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"}
    },
    "transform": [{
      "lookup": "id",
      "from": {
        "data": {"url": "bfro_reports_processed.csv"},
        "key": "state_id",
        "fields": ["count", "state"]  
      }
    }],
    "projection": {"type": "albersUsa"},
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "count",
        "type": "quantitative",
        "scale": {"scheme": "blues"}
      },
      "tooltip": [
        {"field": "state", "title": "State", "type": "nominal"},  
        {"field": "count", "title": "Sightings", "type": "quantitative"}
      ]
    }
  }
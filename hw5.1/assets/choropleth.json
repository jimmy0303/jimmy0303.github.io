{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Bigfoot Sightings by State (2000-2022)",
  "data": {
    "url": "https://cdn.jsdelivr.net/npm/vega-datasets@v1.29.0/data/us-10m.json",
    "format": {"type": "topojson", "feature": "states"}
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jimmy0303/jimmy0303.github.io/main/hw5.1/assets/bfro_reports_processed.csv",
          "format": {"type": "csv"}
        },
        "key": "state_id",
        "fields": ["count", "state"]
      }
    },
    {"filter": "datum.state !== null"}
  ],
  "projection": {"type": "albersUsa"},
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "count",
      "type": "quantitative",
      "title": "Number of Reports",
      "scale": {"scheme": "blues"}
    },
    "tooltip": [
      {"field": "state", "title": "State", "type": "nominal"},
      {"field": "count", "title": "Sightings", "type": "quantitative"}
    ]
  }
}